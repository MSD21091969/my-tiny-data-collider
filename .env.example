# Sample example file - copy to .env and configure
ENVIRONMENT=development
USE_MOCKS=true
PORT=8000

#Google Cloud settings
GOOGLE_CLOUD_PROJECT=mailmind-ai-djbuw
FIRESTORE_DATABASE=mds-objects

# Mock settings
ENABLE_MOCK_GMAIL=true
ENABLE_MOCK_DRIVE=true

# Gmail API Configuration (for real Gmail integration)
# Path to OAuth2 credentials JSON file downloaded from Google Cloud Console
GOOGLE_OAUTH_CREDENTIALS=/path/to/oauth2_credentials.json
# Path to store/load Gmail API access tokens (will be created automatically)
GOOGLE_TOKEN_PATH=token.json

# Solid Pod settings (add your details after setup)
SOLID_ENABLED=false
SOLID_POD_URL=http://localhost:3000/your-username/
SOLID_WEBID=http://localhost:3000/your-username/profile/card#me
SOLID_TOKEN=