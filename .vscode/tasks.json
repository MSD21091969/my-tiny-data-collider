{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Get My Extended Toolset",
			"type": "shell",
			"command": "git",
			"args": [
				"clone",
				"--recursive",
				"https://github.com/MSD21091969/my-tiny-toolset.git",
				"TINYTOOLSET"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Update Toolset Submodules",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"cd TINYTOOLSET; git submodule update --remote --recursive"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Setup Tool Outputs",
			"type": "shell",
			"command": "powershell",
			"args": [
				"-Command",
				"New-Item -ItemType Directory -Force -Path 'C:\\Users\\HP\\Desktop\\krabbel\\tool-outputs\\docs'; Copy-Item -Path '${workspaceFolder}\\TINYTOOLSET\\TOOLSET\\*.md' -Destination 'C:\\Users\\HP\\Desktop\\krabbel\\tool-outputs\\docs\\' -Force -ErrorAction SilentlyContinue"
			],
			"group": "build",
			"dependsOn": "Get My Extended Toolset",
			"problemMatcher": []
		},
		{
			"label": "Run Quick Analysis",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}\\TINYTOOLSET\\TOOLSET\\tools\\code_analyzer.py",
				"${workspaceFolder}",
				"--output",
				"C:\\Users\\HP\\Desktop\\krabbel\\tool-outputs\\analysis",
				"--csv",
				"--json"
			],
			"group": "build",
			"dependsOn": "Setup Tool Outputs",
			"problemMatcher": []
		},
		{
			"label": "Run Model Mapping",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}\\TINYTOOLSET\\TOOLSET\\tools\\mapping_analyzer.py",
				"${workspaceFolder}",
				"--output",
				"C:\\Users\\HP\\Desktop\\krabbel\\tool-outputs\\mappings",
				"--json"
			],
			"group": "build",
			"dependsOn": "Setup Tool Outputs",
			"problemMatcher": []
		},
		{
			"label": "Run Excel Export",
			"type": "shell",
			"command": "python",
			"args": [
				"${workspaceFolder}\\TINYTOOLSET\\TOOLSET\\tools\\excel_exporter.py",
				"${workspaceFolder}",
				"--output",
				"C:\\Users\\HP\\Desktop\\krabbel\\tool-outputs\\excel"
			],
			"group": "build",
			"dependsOn": "Setup Tool Outputs",
			"problemMatcher": []
		},
		{
			"label": "Complete Toolset Setup",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Get My Extended Toolset",
				"Setup Tool Outputs",
				"Run Quick Analysis",
				"Run Model Mapping", 
				"Run Excel Export"
			],
			"group": "build"
		}
	],
	"inputs": [
		{
			"id": "version",
			"type": "promptString",
			"description": "Enter version number",
			"default": "1.0.0"
		}
	]
}
